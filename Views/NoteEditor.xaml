<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:TextAppMaui.ViewModels"
             x:DataType="vm:NoteMainVM"
             x:Class="TextAppMaui.Views.NoteEditor"
             >
    <Frame>
        <VerticalStackLayout Spacing="10" WidthRequest="400">
            <Label Text="Title:" FontSize="18"/>
            <Entry Text="{Binding ToSaveNote.Title}" FontSize="18" Placeholder="Enter note's title"/>
            <Label Text="Detail:" FontSize="18"/>
            <Entry Text="{Binding ToSaveNote.Detail}" FontSize="18" Placeholder="Add some detail about task"/>
            <Button Text="Save" BackgroundColor="#535f73" Command="{Binding SaveNoteCommand}" Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>